<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">
  <% @books.each do |book| %>
    <strong>Title:</strong>
    <%= book.title %>
    <p>
      <%= link_to "Show this book", book %> |
      <%= link_to "Edit this book", edit_book_path(book) %> |
      <%= button_to "Destroy this book", book, method: :delete %>
    </p>
  <% end %>
</div>

<%= link_to "New book", new_book_path %>
